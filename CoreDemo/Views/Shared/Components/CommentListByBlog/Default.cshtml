@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <div class="media">
            <div class="media-body">
                <p>İlk Yorumu Siz Yazın!</p>
            </div>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>
        }
    }
</div>
